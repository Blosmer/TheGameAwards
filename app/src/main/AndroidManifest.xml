<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mac.thegameawards">

    <uses-permission android:name="android.permission.WRITE_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="The Game Awards"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">

        <activity android:name="com.example.mac.thegameawards.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.mac.thegameawards.OpcionesActivity"
            android:parentActivityName="com.example.mac.thegameawards.MainActivity"/>
        <activity android:name="com.example.mac.thegameawards.Winners"
            android:parentActivityName="com.example.mac.thegameawards.MainActivity"/>
    </application>

</manifest>